{
  /* 
  It is worth noting that these settings are not just workspace
  settings, I am using this file to share user settings between 
  my desktop and my laptop. 
  
  Feel free to override any user settings!
  */

  // Workspace Settings
  "editor.tabSize": 2, // enforced by Prettier
  "editor.formatOnSave": true, // runs prettier on file save
  "cSpell.enabledLanguageIds": ["latex", "markdown", "plaintext", "text"], // only runs spell checker on these type of files
  "cSpell.words": [
    "Corum",
    "corum's",
    "reddit",
    "solus",
    "repo",
    "signup",
    "subforum",
    "flexbox"
  ], // words that are used in the docs that are not recognised, please add if more are used and show warnings.

  // User Settings
  "editor.fontSize": 15,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "smooth",
  "editor.minimap.enabled": false,

  "importCost.smallPackageColor": "#444",
  "importCost.mediumPackageColor": "#444",
  "importCost.largePackageColor": "#444",

  "markdown.preview.fontSize": 15,
  "markdown.preview.fontFamily": "Fire Code",
  "markdown.extension.preview.autoShowPreviewToSide": true,

  "svgviewer.enableautopreview": true,

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontLigatures": true,

  "window.title": "Code",
  "window.zoomLevel": 1.4,

  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.tabCloseButton": "left",
  "workbench.sideBar.location": "right",
  "workbench.tips.enabled": false,
  "workbench.startupEditor": "none",

  "zenMode.hideActivityBar": false,
  "zenMode.hideTabs": false
}
